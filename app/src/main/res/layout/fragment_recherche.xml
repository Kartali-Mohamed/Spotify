<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recherche.RechercheFragment"
    android:background="#121212"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recherche"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>
        
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:background="#212121"
            android:hint="Artistes, titres ou podcasts"
            android:textSize="19sp"
            android:textColorHint="#D5D5D5"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/ic_chercher_svg"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parcourir tout"
            android:textColor="#fff"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@drawable/podcasts"
                android:layout_alignParentLeft="true"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@drawable/sorties"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@drawable/classements"
                android:layout_alignParentLeft="true"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@drawable/concerts"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@drawable/concu"
                android:layout_alignParentLeft="true"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@drawable/maison"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@drawable/arabic"
                android:layout_alignParentLeft="true"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:background="@drawable/francais"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>
    


</FrameLayout>